<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>Apostas SA endpoints usuario comum</display-name>

  <!-- USUARIO -->
  <servlet>
    <servlet-name>AutenticarUsuarioUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.AutenticarUsuarioUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AutenticarUsuarioUserServlet</servlet-name>
    <url-pattern>/usuario/autenticar</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CadastrarUsuarioUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.CadastrarUsuarioUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastrarUsuarioUserServlet</servlet-name>
    <url-pattern>/usuario/cadastro</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DadosPessoaisUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.DadosPessoaisUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DadosPessoaisUserServlet</servlet-name>
    <url-pattern>/usuario/dados-pessoais</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PaginaInicialUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.PaginaInicialUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaginaInicialUserServlet</servlet-name>
    <url-pattern>/usuario/pagina-inicial</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AlterarSenhaUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.AlterarSenhaUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlterarSenhaUserServlet</servlet-name>
    <url-pattern>/usuario/alterar-senha</url-pattern>
  </servlet-mapping>


  <!-- USUARIO - PERFIL PARTICIPANTE -->
  <servlet>
    <servlet-name>PerfilParticipanteUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.usuario.perfilparticipante.PerfilParticipanteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PerfilParticipanteUserServlet</servlet-name>
    <url-pattern>/usuario/perfil-participante</url-pattern>
  </servlet-mapping>


  <!-- CATEGORIA -->
  <servlet>
    <servlet-name>CategoriaUserServlet</servlet-name>
    <servlet-class>com.apostassa.infra.categoria.CategoriaUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CategoriaUserServlet</servlet-name>
    <url-pattern>/categoria</url-pattern>
  </servlet-mapping>
</web-app>
